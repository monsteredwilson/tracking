{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"typeRoots": [
			"node_modules/@types"
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}